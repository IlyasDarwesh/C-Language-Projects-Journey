void burger_list(){
    int b;
        cout<<setw(31)<<endl<<" ---> BURGER LIST <--- "<<endl<<endl;
        cout<<setw(31)<<endl<<"1 . Beef Burgers =  430"<<endl<<endl;
    cout<<setw(31)<<"2 . Elk Burgers  =  300"<<endl<<endl;
    cout<<setw(45)<<"3 . Portobello Mushroom Burgers=  520"<<endl<<endl;
    cout<<setw(31)<<"4 . Turkey Burgers=  280"<<endl<<endl;
    cout<<setw(25)<<"******************************************************************************"<<endl<<endl;
    cout<<"Select the Burger , which You want ? :   " ;

        cin>>b;
        cout<<endl;
        if(b==1){
            
            int T_items;
        
            cout<<"your Selected  Burger is Beef Burger"<<endl<<endl;
            cout<<"Enter number of Items :  ";
            cin>>T_items;
            cout<<endl;
            cout<<"Your ordered is ready with in 15 minutes "<<endl<<endl;
            cout<<endl<<"Please Pay the Bill on Counter "<<" , your total bill is : "<<T_items*430<<endl;
        }
        else if(b==2){
            
                int T_items;
        
            cout<<"your Selected  Burger is ELk Burger"<<endl<<endl;
            cout<<"Enter number of Items :  ";
            cin>>T_items;
            cout<<endl;
            cout<<"Your ordered is ready with in 10 minutes "<<endl<<endl;
            cout<<endl<<"Please Pay the Bill on Counter "<<" , your total bill is : "<<T_items*300<<endl;
        }
        else if(b==3){
                int T_items;
        
            cout<<"your Selected  Burger is Portobello Mushroom Burger "<<endl<<endl;
            cout<<"Enter number of Items :  ";
            cin>>T_items;
            cout<<endl;
            cout<<"Your ordered is ready with in 30 minutes "<<endl<<endl;
            cout<<endl<<"Please Pay the Bill on Counter "<<" , your total bill is : "<<T_items*520<<endl;
        }
        else if(b==4){
                int T_items;
                
                cout<<"your Selected  Burger is  Turkey  Burger "<<endl<<endl;
            cout<<"Enter number of Items :  ";
            cin>>T_items;
            cout<<endl;
            cout<<"Your ordered is ready with in 30 minutes "<<endl<<endl;
            cout<<endl<<"Please Pay the Bill on Counter "<<" , your total bill is : "<<T_items*280<<endl;
        }
        else{
            
            cout<<"Sorry !!! We have No other variety :( "<<endl;
        }
            cout<<setw(95)<<"_____________________________________________________________________________________"<<endl<<endl<<endl;
        
}

